<main>
 <p id="notice"></p>
  <div class="container px-5 px-sm-0">
  <div class="row">
  <div class="col-md-3">

   <% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
   <% end %>

<h1>User info</h1>

<div>
  <table class="table">
  <tbody><tr></tr>

  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
  <th>name：<%= @user.name %></th>
  <th>introduction：<%= @user.introduction %></th>

  </tbody>
  </table>
</div>

<div class="row">
<%= link_to edit_user_path(@user.id), method: :get do %>
<i class="fas fa-user-cog"></i>
<% end %>
</div>


<h3>New book</h3>
 <%= form_with model: @newbook, local:true do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Opinion</p>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<h4>Book detail</h4>
<div class="col-md-8 offset-md-1">
<table class="table table-hover table-inverse">
 <thead>
  <th> </th>
  <th> </th>
  <th> </th>
  <th> </th>
  <th> </th>
  <th colspan="5"></th>
  <tr></tr>
  <tr>

  <th><%= link_to user_path(@book.user) , target: "_blank" do %>
  　　　<%= attachment_image_tag(@book.user, :profile_image,  :fill, 60, 60, fallback: "no_image.jpg") %>
  　 　<%= @book.user.name  %>
　　　<% end %></th>

  <th><%= link_to @book.title, book_path(@book.id) %></th>
  <th><%= @book.body %></th>
  <% if @user.id == current_user.id %>
  <th><%= link_to 'Edit', edit_book_path(@book.id) %></th>
  <th><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか?" %></th>
  <% end %>
</tr>

 <thead>
</table>
</div>
  </div>
  </div>
  </div>
</main>