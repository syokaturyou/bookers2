<main>
 <p id="notice"></p>
  <div class="container">
  <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <% if @book.errors.any? %>
   <%= @book.errors.count %>error
   <% @book.errors.full_messages.each do |message| %>
   <%= message %>
   <% end %>
   <% end %>


<h2>Editing Book</h2>
<%= form_with model:@book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
   <div class="form-group">
   <input type="submit" name="commit" value="Update Book" class="btn btn-success" data-disable-with="Update Book">
   </div>
<% end %>

<%= link_to "Show", book_path %> |
<%= link_to "Back", books_path %>

 </div>
 </div>
 </div>
</main>