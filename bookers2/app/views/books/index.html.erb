<main>
  <div class="container px-5 px-sm-0">
  <div class="row">
  <div class="col-md-3">

   <% if @newbook.errors.any? %>
   <%= @newbook.errors.count %>error
   <% @newbook.errors.full_messages.each do |message| %>
   <%= message %>
   <% end %>
   <% end %>

  <h1>User info</h1>
  <table class="table">
  <tbody>
  <% if @user = current_user %>
  <tr><th><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></th></tr>
  <tr><th>name：<%= @user.name %></th></tr>
  <tr><th>introduction：<%= @user.introduction %></th></tr>
  <% end %>
  <tr><th>follows</th></tr>
  <tr><th>followers</th></tr>
  </tbody>
  </table>

  <%= link_to edit_user_path(current_user.id), class: 'btn btn-outline-secondary', method: :get do %>
  <i class="fas fa-user-cog"></i>
  <% end %>

  <h3>New book</h3>
  <%= form_with model: @newbook, local:true do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Opinion</p>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book', class: 'btn btn-success' %>
  <% end %>
  </div>

 <div class="col-md-8 offset-md-1">
 <table class="table table-hover table-inverse">
 <h4>Books</h4>
 <thead>
  <th> </th>
  <th>Title </th>
  <th>Opinion </th>
  <th colspan="3"></th>
  <tr></tr>

  <% @books.each do |book| %>
  <tr>
  <th><%= link_to attachment_image_tag(book.user, :profile_image,  :fill, 60, 60, fallback: "no_image.jpg"), user_path(book.user) %></th>
  <th><%= link_to book.title, book_path(book.id) %></th>
  <th><%= book.body %></th>
  <th><% if book.favorited_by?(current_user) %>
    <p><%= link_to book_favorites_path(book.id), method: :delete do %>
    <i class="fas fa-heart" style="color: red;"></i>
        <%= book.favorites.count %>
       <% end %></p>
      <% else %>
       <p><%= link_to book_favorites_path(book.id), method: :post do %>
       <i class="fas fa-heart" style="color: royalblue;"></i>
          <%= book.favorites.count %>
          <% end %></p>
      <% end %></th>

   <th><p><%= link_to "#{book.book_comments.count} コメント", book_path(book.id) %></p></th>

   <% end %>
   </tr>
 <thead>
 </table>
 </div>

 </div>
 </div>
</main>